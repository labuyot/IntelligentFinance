<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBacground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.earllarry.intelligentfinance.DashboardDrawer"
    tools:showIn="@layout/app_bar_dashboard_drawer">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/layout_border"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/textViewBienvenida"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Balance"
            android:id="@+id/textViewBalance"
            android:layout_gravity="left|top"
            android:inputType="textCapSentences"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#1747e6"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewBalanceDashboard"
            android:layout_gravity="right|top"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#1747e6"
            android:textAlignment="textEnd" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewBienvenida"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:editable="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/layout_border"
        android:id="@+id/frameLayoutIngreso"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:contextClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ingreso"
            android:id="@+id/textViewIngresoFijoDashboard"
            android:layout_gravity="left|center_vertical"
            android:inputType="textCapSentences"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:textColor="#2aad28"
            android:textStyle="bold"
            android:typeface="serif"
            android:clickable="true" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewIngresoDashboard"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:textColor="#2aad28"
            android:textAlignment="textEnd"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/layout_border"
        android:id="@+id/frameLayoutGasto"
        android:layout_below="@+id/frameLayoutIngreso"
        android:layout_alignParentEnd="true"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gasto"
            android:id="@+id/textViewGastoFijoDashboard"
            android:layout_gravity="left|bottom"
            android:inputType="textCapSentences"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:typeface="serif"
            android:clickable="true" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewGastoDashboard"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ff0000"
            android:textAlignment="textEnd" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/frameLayoutTarjeta"
        android:clickable="true"
        android:background="@drawable/layout_border"
        android:layout_below="@+id/frameLayoutGasto"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewTarjetDashboard"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ff6200"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tarjeta"
            android:id="@+id/textViewTarjetaFijoDashboard"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ff6200"
            android:textStyle="bold"
            android:typeface="serif"
            android:clickable="true" />
    </FrameLayout>

</RelativeLayout>
