<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF656565"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.earllarry.intelligentfinance.DashboardDrawer"
    tools:showIn="@layout/app_bar_dashboard_drawer">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#ffffff"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/textViewBienvenida"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ingreso"
            android:id="@+id/textViewIngreso"
            android:layout_gravity="left|center_vertical"
            android:inputType="textCapSentences"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:textColor="#2aad28"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Balance"
            android:id="@+id/textViewBalance"
            android:layout_gravity="left|top"
            android:inputType="textCapSentences"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#1747e6"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gasto"
            android:id="@+id/textViewGasto"
            android:layout_gravity="left|bottom"
            android:inputType="textCapSentences"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewBalanceMonto"
            android:layout_gravity="right|top"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#1747e6"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewIngresoMonto"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:textColor="#2aad28"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewGastoMonto"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ff0000"
            android:textAlignment="textEnd" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:id="@+id/frameLayout2"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tarjeta"
            android:id="@+id/textViewTarjeta"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ff6200"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$ 0.00"
            android:id="@+id/textViewTarjetaMonto"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ff6200"
            android:textAlignment="textEnd" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewBienvenida"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />

</RelativeLayout>
